Algoritmo "Exemplo de SE 3"

Var
l1,l2,l3:inteiro

Inicio
escreva("Digite o lado 1: ")
  leia(l1)
   escreva("Digite o lado 2: ")
     leia(l2)
       escreva("Digite o lado 3: ")
        leia(l3)
           se l1<(l2+l3) entao
          se l2<(l1+l3) entao
        se l3<(l1+l2) entao
      escreva("A figura é um triângulo")
    fimse
  fimse
fimse
Fimalgoritmo